{
  "compilerOptions": {
    // Compilation Configuration
    "target": "es2017",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": "packages",
    "rootDir": "packages",

    // Environment Configuration
    "experimentalDecorators": true,
    "moduleResolution": "node",

    // Enhance Strictness
    "strict": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "newLine": "LF",
    "noEmit": true,
    "allowJs": false
  },

  "include": [
    "packages/**/*.ts"
  ],

  "exclude": [
    "dist",
    "tmp",
    "node_modules"
  ]
}
