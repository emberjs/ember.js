{
  "compilerOptions": {
    "composite": true,
    "lib": ["esnext", "DOM", "DOM.Iterable", "ES2015.Iterable"],
    "allowJs": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "../../ts-dist/packages",
    "baseUrl": "..",
    "verbatimModuleSyntax": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "suppressImplicitAnyIndexErrors": false,
    "useDefineForClassFields": false,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "types": ["qunit", "node", "vite/client"]
  },
  "include": ["./*/test/**/*"],
  "exclude": ["./*/test/node_modules", "**/fixtures"],
  "references": [
    {
      "path": "./tsconfig.json"
    },
    {
      "path": "../@glimmer-workspace/tsconfig.json"
    }
  ]
}
