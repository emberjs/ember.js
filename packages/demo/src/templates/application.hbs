<Header @session={{this.session}} />
<EmberNotify />
{{#if this.showModal}}
<ModalDialog>
  <div data-test-id="modal-dialog-message">
    Ember Modal Dialog test <Button {{on 'click' (stop-propagation this.closeModal)}} data-test-id="close-modal-dialog">Close</Button>
  </div>
</ModalDialog>
{{/if}}

<div class='mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-8'>
  <div class='mx-auto max-w-3xl'>

  {{#if (media 'isDesktop')}}
    looks like you on Desktop
  {{else if (media 'isTablet')}}
    looks like you on Tablet
  {{else if (media 'isMobile')}}
    looks like you on Mobile
  {{else}}
    wow
  {{/if}}

    {{outlet}}

    <div class='rounded-md bg-blue-50 p-4 mt-8'>
      <div class='flex'>
        <div class='flex-shrink-0'>
          <svg
            class='h-5 w-5 text-blue-400'
            xmlns='http://www.w3.org/2000/svg'
            viewBox='0 0 20 20'
            fill='currentColor'
            aria-hidden='true'
          >
            <path
              fill-rule='evenodd'
              d='M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z'
              clip-rule='evenodd'
            />
          </svg>
        </div>
        <div class='ml-3 flex-1 md:flex md:justify-between'>
          <p class='text-sm text-blue-700'>Here is your login status</p>
          <p class='mt-3 text-sm md:mt-0 md:ml-6' data-login-status>
            {{#if this.session.isAuthenticated}}
              You are authenticated as
              {{this.session.data.authenticated.name}}
            {{else}}
              You are not authenticated
            {{/if}}
          </p>
        </div>
      </div>
    </div>

  </div>
</div>

<Footer />