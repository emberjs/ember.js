{
  "name": "sproutcore",
  "description": "SproutCore - JavaScript Application Framework",
  "summary": "SproutCore - JavaScript Application Framework",
  "homepage": "http://github.com/sproutcore/sproutcore20",
  "author": "Charles Jolley",
  "version": "2.0.beta.2",

  "dependencies": {
    "spade":                 "~> 1.0.0",
    "sproutcore-runtime":    "2.0.beta.2",
    "sproutcore-views":      "2.0.beta.2",
    "sproutcore-datastore":  "2.0.beta.2",
    "sproutcore-handlebars": "2.0.beta.2",
    "sproutcore-handlebars-format": "~> 1.0.0"
  },

  "directories": {
    "lib": "lib"
  },

  "bpm:build": {
    "bpm_libs.js": {
      "directories": ["lib"],
      "modes": "*"
    }
  },
  
  "bpm:provides": {
    "format:handlebars": {
      "mime:default": "application/javascript",
      "main": "sproutcore-handlebars-format/format" 
    }
  }

}
